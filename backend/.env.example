# Cost Guardian Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database
POSTGRES_HOST=your-postgres-host.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=cost_guardian
POSTGRES_USER=cost_guardian_user
POSTGRES_PASSWORD=your_postgres_password

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# Vector Database Configuration
# =============================================================================
# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=cost-guardian-embeddings

# Alternative: Weaviate Configuration
WEAVIATE_URL=https://your-weaviate-cluster.weaviate.network
WEAVIATE_API_KEY=your_weaviate_api_key
WEAVIATE_CLASS_NAME=CostGuardianEmbeddings

# =============================================================================
# LLM Configuration
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Lambda Function Names (for cross-function communication)
# =============================================================================
DATA_COLLECTOR_FUNCTION=cost-guardian-data-collector
DATA_CLEANER_FUNCTION=cost-guardian-data-cleaner
ETL_FUNCTION=cost-guardian-etl
EMBEDDING_FUNCTION=cost-guardian-embedding
RAG_FUNCTION=cost-guardian-rag
API_FUNCTION=cost-guardian-api

# =============================================================================
# SNS/SQS Configuration
# =============================================================================
NOTIFICATION_TOPIC=cost-guardian-notifications
PROCESSING_QUEUE=cost-guardian-processing
DEAD_LETTER_QUEUE=cost-guardian-dlq

# =============================================================================
# API Configuration
# =============================================================================
API_GATEWAY_STAGE=prod
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000
API_RATE_LIMIT=1000
API_TIMEOUT=30

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/aws/lambda/cost-guardian
METRICS_NAMESPACE=CostGuardian

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Data Collection Configuration
# =============================================================================
# Collection Intervals (in hours)
COST_COLLECTION_INTERVAL=24
METRICS_COLLECTION_INTERVAL=1
ANOMALY_CHECK_INTERVAL=6

# Data Retention (in days)
COST_DATA_RETENTION_DAYS=365
METRICS_DATA_RETENTION_DAYS=90
LOG_DATA_RETENTION_DAYS=30

# =============================================================================
# RAG Configuration
# =============================================================================
# Embedding Configuration
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100
SIMILARITY_THRESHOLD=0.7

# Context Configuration
MAX_CONTEXT_LENGTH=4000
MAX_RETRIEVAL_RESULTS=10
RAG_CACHE_TTL_HOURS=24

# =============================================================================
# Cost Optimization Thresholds
# =============================================================================
# Utilization Thresholds
CPU_UTILIZATION_THRESHOLD=80
MEMORY_UTILIZATION_THRESHOLD=85
STORAGE_UTILIZATION_THRESHOLD=90

# Cost Thresholds
DAILY_COST_THRESHOLD=1000
MONTHLY_COST_THRESHOLD=30000
ANOMALY_COST_THRESHOLD=500

# =============================================================================
# Email/Notification Configuration
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Report Recipients
REPORT_RECIPIENTS=admin@company.com,finance@company.com
ALERT_RECIPIENTS=devops@company.com

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Environment
ENVIRONMENT=development
DEBUG=true

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/cost_guardian_test
MOCK_AWS_SERVICES=false

# =============================================================================
# Security Configuration
# =============================================================================
# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENABLE_DATA_ENCRYPTION=true

# API Security
ENABLE_API_KEY_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_RAG=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_COST_FORECASTING=true
ENABLE_AUTOMATED_RECOMMENDATIONS=true
ENABLE_REAL_TIME_MONITORING=true
