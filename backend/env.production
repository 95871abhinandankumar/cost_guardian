# Cost Guardian Backend - Production Environment Variables
# These will be set via AWS Lambda environment variables or AWS Secrets Manager

# =============================================================================
# AWS Configuration (Production)
# =============================================================================
AWS_REGION=us-east-1
# AWS credentials handled by IAM roles in Lambda

# =============================================================================
# Database Configuration (Production)
# =============================================================================
POSTGRES_HOST=${DB_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=cost_guardian_prod
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}

# =============================================================================
# Vector Database Configuration (Production)
# =============================================================================
PINECONE_API_KEY=${PINECONE_API_KEY}
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=cost-guardian-prod

# =============================================================================
# LLM Configuration (Production)
# =============================================================================
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# Production Settings
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Lambda Function Names
# =============================================================================
DATA_COLLECTOR_FUNCTION=cost-guardian-data-collector-prod
DATA_CLEANER_FUNCTION=cost-guardian-data-cleaner-prod
ETL_FUNCTION=cost-guardian-etl-prod
EMBEDDING_FUNCTION=cost-guardian-embedding-prod
RAG_FUNCTION=cost-guardian-rag-prod
API_FUNCTION=cost-guardian-api-prod

# =============================================================================
# Production Feature Flags
# =============================================================================
ENABLE_RAG=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_COST_FORECASTING=true
ENABLE_AUTOMATED_RECOMMENDATIONS=true
ENABLE_REAL_TIME_MONITORING=true
